Q1)
select sum(price * stock) as total_value
from books;

Q2)
select genre, count(*) as book_count
from books
group by genre
order by book_count desc;

Q3)
update books set price = price*0.9 where publication_year < 1950;
select title,price as new_price, round(price / 0.9,2) as old_price
FROM books
WHERE publication_year < 1950;

Q4)
select title, author, genre, price from books
where genre = 'Fiction'
    or  price < 12;

Q5)
SELECT 
    title,
    stock AS current_stock,
    stock AS days_to_sell_all
FROM books
WHERE stock > 10
ORDER BY stock DESC;