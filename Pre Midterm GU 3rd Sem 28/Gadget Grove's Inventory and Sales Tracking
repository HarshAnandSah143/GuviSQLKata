Q1)
select name,stock_quantity,category from products where stock_quantity<100 order by stock_quantity asc;

Q2)
SELECT
  name,
  category,
  SUM(quantity) AS total_quantity
FROM
  products AS p
JOIN
  sales AS s ON p.id = s.product_id
GROUP BY
  p.id, p.name, p.category
ORDER BY
  total_quantity ASC
LIMIT 1;

Q3)
SELECT id,name,category,price,stock_quantity+25 as stock_quantity FROM products WHERE name = 'Laptop';

Q4)
SELECT
  category,
  round(sum(p.price*s.quantity),2) AS total_revenue
FROM
  products AS p
JOIN
  sales AS s ON p.id = s.product_id
GROUP BY
  p.category
ORDER BY
  total_revenue desc;

Q5)
SELECT
  name,
  SUM(s.quantity) AS total_quantity,
  MAX(s.sale_date) AS last_sale_date
FROM
  products AS p
JOIN
  sales AS s ON p.id = s.product_id
GROUP BY
  p.id, p.name
ORDER BY
  total_quantity desc
LIMIT 1;